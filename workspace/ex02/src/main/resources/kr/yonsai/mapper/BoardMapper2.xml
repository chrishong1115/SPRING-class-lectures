<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.yonsai.mapper.BoardMapper">

	<select id="getList" resultType="kr.yonsai.domain.BoardVO">
		<![CDATA[
			select * from tbl_board where bno > 0
		]]>
	</select>

	<select id="getListWithPaging" resultType="kr.yonsai.domain.BoardVO">
		SELECT * FROM sample_db.tbl_board 
		<trim prefix="where (" suffix=")" prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like concat('%',#{keyword},'%')
						</when>
						<when test="type == 'C'.toString()">
							content like concat('%',#{keyword},'%')
						</when>
						<when test="type == 'W'.toString()">
							writer like concat('%',#{keyword},'%')
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
		ORDER BY bno DESC
		LIMIT #{offsetNum}, #{amount} 
		<!--
		<![CDATA[
			select tb.bno, tb.title, tb.content, tb.writer, tb.regdate, tb.updatedate 
			from (
				select /*+INDEX_DESC(sample_db.tbl_board pk_board) */
					ROW_NUMBER() OVER (ORDER BY bno DESC) AS rn, bno, title, content, writer, regdate, updatedate from sample_db.tbl_board) as tb
				where 
		]]>
		<trim prefix="(" suffix=") AND " prefixOverrides="OR">
			<foreach item='type' collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like concat('%',#{keyword},'%')
						</when>
						<when test="type == 'C'.toString()">
							content like concat('%',#{keyword},'%')
						</when>
						<when test="type == 'W'.toString()">
							writer like concat('%',#{keyword},'%')
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
		
		<![CDATA[
			rn <= #{pageNum} * #{amount}
			) 
		where rn > (#{pageNum} - 1) * #{amount} 
		
		]]> 
		-->
	</select>

	<insert id="insert">
		insert into sample_db.tbl_board
		(title, content,writer)
		values (#{title},#{content}, #{writer})
	</insert>

	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select auto_increment
			from information_schema.tables
			where table_schema = "sample_db"
			and table_name = "tbl_board"
		</selectKey>
		insert into sample_db.tbl_board
		(bno, title, content, writer)
		values (#{bno}, #{title},#{content}, #{writer})
	</insert>

	<select id="read" resultType="kr.yonsai.domain.BoardVO">
		select * from sample_db.tbl_board
		where bno = #{bno}
	</select>

	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>

	<update id="update">
		update tbl_board
		set title=#{title}, content=#{content}, writer=#{writer}
		where bno = #{bno}
	</update>

	<select id="getTotalCount" resultType="int">
			select count(*) from sample_db.tbl_board where bno > 0
	</select>
</mapper>